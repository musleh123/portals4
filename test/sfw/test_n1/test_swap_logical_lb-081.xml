<?xml version="1.0"?>
<test>
  <desc>Test swap CSWAP/UCHAR</desc>
  <ptl>
    <ptl_ni>
      <ompi_rt>
        <ptl_ni ni_opt="MATCH LOGICAL">
          <ptl_pt>
            <ptl_me me_data="0xd8" me_match="0x3ba9d2e2" me_opt="OP_PUT OP_GET" type="UCHAR">
              <ptl_md md_data="0xa8" type="UCHAR">
                <ptl_md md_data="0x97" type="UCHAR">
                  <ptl_swap atom_op="CSWAP" atom_type="UCHAR" length="1" match="0x3ba9d2e2" operand="0xc3" target_id="SELF"/>
                  <msleep count="50"/>
                </ptl_md>
                <check length="1" md_data="0xa8" type="UCHAR"/>
                <check length="1" md_data="0xa8" offset="1" type="UCHAR"/>
              </ptl_md>
              <check length="1" me_data="0xd8" type="UCHAR"/>
              <check length="1" me_data="0xd8" offset="1" type="UCHAR"/>
            </ptl_me>
          </ptl_pt>
          <barrier/>
        </ptl_ni>
      </ompi_rt>
    </ptl_ni>
  </ptl>
</test>
